extends ../layouts/default
block css
  link(rel="stylesheet" href="js/flipclock/css/flipclock.css")
block content
  .container
    h1 Good Vibes Central!
    div.row
      div.col-lg-12
        div.countdown-clock
    div.row
      div.col-md-4
        p Column 1/3!
      div.col-md-4
        p Column 2/3!
      div.col-md-4
        p Column 3/3!
block js
  // Adding countdown timer
  script(src="/public/js/countdownclock.js" type="text/javascript")
  script(src="js/flipclock/js/flipclock/flipclock.min.js" type="text/javascript")
  // Where the code to set the countdown timer is located
  script.
    $(document).ready(function() {
        var currentDate = new Date();
        var futureDate  = new Date(currentDate.getFullYear() + 1, 0, 1);
        var diff = futureDate.getTime() / 1000 - currentDate.getTime() / 1000;
        clock = $('.countdown-clock').FlipClock(diff, {
            clockFace: 'DailyCounter',
          countdown: true
        });
      });
